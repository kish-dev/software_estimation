<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".all_employees_feature.AllEmployeesFragment">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/all_employees__search_employees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_search"
        android:hint="@string/search_employees"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_employees_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/all_employees__add_employee"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_plus_black"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content" />

</LinearLayout>