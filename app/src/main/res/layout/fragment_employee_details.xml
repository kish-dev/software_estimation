<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee_details_feature.EmployeeDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/employee_details__name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_black_stroke"
            android:ellipsize="end"
            android:textAppearance="@style/UsualText.Title"
            android:maxLines="1"
            android:padding="16dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/employee_details__surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_black_stroke"
            android:ellipsize="end"
            android:textAppearance="@style/UsualText.Title"
            android:maxLines="1"
            android:padding="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/employee_details__add_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_lil_purple"
            android:padding="16dp"
            android:text="@string/spec" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/employee_details__spec_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/employee_details__add_busy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_lil_purple"
            android:padding="16dp"
            android:text="@string/busy" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/employee_details__date_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/employee_details__edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_edit"
            />

    </LinearLayout>

</ScrollView>